
<div class = "content">
  <div class="row">

    <div class = "col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
      <h4>Admin tools</h4>
      <table class="table table-striped table-condensed" style = "font-size: 0.8em">
        <thead>
        <tr>
          <th>IP</th>
          <th>Page</th>
          <th>Browser</th>
          <th>Platform</th>
          <th>City</th>
          <th>Country</th>
          <th>Time</th>
          <th>Date</th>
        </tr>
        </thead>
        <tbody>
        <% @visits.each do |v|  %>
            <tr><td> <%= v.ip_address  %></td>
              <td> <%= v.path %></td>
              <td> <%= v.browser  %></td>
              <td><%= v.platform %></td>
              <td><%= v.city %></td>
              <td><%= v.country %></td>
              <td><%= v.created_at.strftime("%I:%M%p") %>
              <td><%= v.created_at.strftime("%d %b %Y") %></td></tr>
        <% end %>
        </tbody>
      </table>
    </div>


    </div><!--outer row-->
    <%= will_paginate @visits %>
</div>











